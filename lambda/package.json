{
  "name": "smart-chatbot-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for smart chatbot with Lex integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest --coverage --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "package": "rm -f ../lambda_function.zip && zip -r ../lambda_function.zip . -x '*.test.js' 'jest.config.js' '.eslintrc.json' 'coverage/*' 'node_modules/.cache/*'",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "aws",
    "lambda",
    "lex",
    "chatbot",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-lex-runtime-v2": "^3.699.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
