{
  "name": "smart-chatbot-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for smart chatbot with Lex integration",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "package": "rm -f ../lambda_function.zip && zip -r ../lambda_function.zip . -x '*.test.js' 'jest.config.js' '.eslintrc.json' 'coverage/*' 'node_modules/.cache/*'",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "aws",
    "lambda",
    "lex",
    "chatbot",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}